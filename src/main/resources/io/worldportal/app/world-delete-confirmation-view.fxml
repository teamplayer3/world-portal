<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>

<VBox fx:id="deleteConfirmationRoot" spacing="10.0" styleClass="app-root" stylesheets="@main-view.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="14.0" right="16.0" bottom="14.0" left="16.0"/>
    </padding>
    <children>
        <Label styleClass="panel-title" text="Delete World"/>
        <Label fx:id="deleteWorldPromptLabel" styleClass="field-label"/>
        <TextField fx:id="deleteWorldNameInput" promptText="World name" styleClass="neon-input"/>
        <Label fx:id="deleteWorldStatusLabel" styleClass="status-label"/>
        <HBox alignment="CENTER_RIGHT" spacing="8.0">
            <children>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="cancelDeleteWorldButton" mnemonicParsing="false" styleClass="action-button" text="Cancel"/>
                <Button fx:id="confirmDeleteWorldButton" mnemonicParsing="false" styleClass="danger-action-button" text="Delete"/>
            </children>
        </HBox>
    </children>
</VBox>
